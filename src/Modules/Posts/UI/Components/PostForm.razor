@using Pulse.Posts.Contracts
@using Pulse.Posts.UI.Model
@using Pulse.Shared.Auth
@using Pulse.Shared.UI.Components
@using Microsoft.AspNetCore.Components.Forms

@inject IdentityProvider IdentityProvider

@code {
  [Parameter] public string? ErrorMessage { get; set; }
  [Parameter] public Guid? PostId { get; set; }
  [Parameter] public IEnumerable<AttachmentDownload> Attachments { get; set; } = [];

  private CurrentUser? _user;

  protected override void OnInitialized()
  {
    _user = IdentityProvider.GetCurrentUser();
  }

  private string GetAttachmentUrl() => PostId.HasValue && PostId.Value != Guid.Empty
    ? $"/api/post/{PostId}/attachment"
    : "/api/post/attachment";
}

<Panel>
  <form class="flex flex-col flex-1 gap-y-4" hx-post="/api/post" hx-swap="outerHTML" hx-target="this"
    hx-trigger="submit" 
    data-controller="post-form"
    data-js-post-length="0"
    data-js-post-max-length="280"
    data-js-post-start-colour="[255, 255, 255]"
    data-js-post-mid-colour="[255, 255, 0]"
    data-js-post-end-colour="[255, 0, 0]">
    @if (PostId.HasValue)
    {
      <input type="hidden" name="postId" value="@PostId.Value" />
    }
    <AntiforgeryToken/>
    <div class="flex flex-1 p-4 space-x-5">
      <Avatar src="@_user?.ProfilePictureUrl" alt="@_user?.DisplayName" initials="@_user?.Initials" />
      <textarea data-component="post-box"
        required maxlength="280" rows="2" name="content" type="text" placeholder="What's up?"
        class="block overflow-hidden mx-4 p-2.5 w-full text-sm text-gray-900 bg-white rounded-xl border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 resize-none"
        hx-preserve />
    </div>

    @if (Attachments.Any() && PostId.HasValue)
    {
      <div class="px-4">
        <AttachmentCarousel PostId="PostId.Value" Attachments="Attachments" ShowDeleteButton="true" />
      </div>
    }

    <div class="flex justify-end items-center">
      <div class="flex items-center gap-x-4 px-4">
        <div class="relative inline-block group">
            <label
              class="p-2 text-white hover:text-blue-500 hover:bg-blue-50 rounded-full transition-all duration-200 cursor-pointer inline-flex items-center">
              <input 
                type="file" 
                name="attachments" 
                accept="image/*" 
                multiple 
                class="sr-only" 
                hx-trigger="change"
                hx-encoding="multipart/form-data"
                hx-swap="outerHTML"
                hx-post="@GetAttachmentUrl()" />
              <div class="w-5 h-5">
                <svg viewBox="0 0 24 24" aria-hidden="true">
                  <g fill="currentColor">
                    <path
                      d="M3 5.5C3 4.119 4.119 3 5.5 3h13C19.881 3 21 4.119 21 5.5v13c0 1.381-1.119 2.5-2.5 2.5h-13C4.119 21 3 19.881 3 18.5v-13zM5.5 5c-.276 0-.5.224-.5.5v9.086l3-3 3 3 5-5 3 3V5.5c0-.276-.224-.5-.5-.5h-13zM19 15.414l-3-3-5 5-3-3-3 3V18.5c0 .276.224.5.5.5h13c.276 0 .5-.224.5-.5v-3.086zM9.75 7C8.784 7 8 7.784 8 8.75s.784 1.75 1.75 1.75 1.75-.784 1.75-1.75S10.716 7 9.75 7z">
                    </path>
                  </g>
                </svg>
              </div>
              <span class="sr-only">Add Image</span>
            </label>
          <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-2 bg-gray-700 text-white text-xs rounded-md whitespace-nowrap opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            Add Image
            <div
              class="absolute top-full left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-gray-700">
            </div>
          </div>
        </div>
        <div class="relative inline-block group">
          <button type="button"
            class="p-2 text-black hover:text-blue-500 hover:bg-blue-50 rounded-full transition-all duration-200 cursor-pointer">
            <div class="w-5 h-5">
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <g fill="currentColor">
                  <path
                    d="M3 5.5C3 4.119 4.12 3 5.5 3h13C19.88 3 21 4.119 21 5.5v13c0 1.381-1.12 2.5-2.5 2.5h-13C4.12 21 3 19.881 3 18.5v-13zM5.5 5c-.28 0-.5.224-.5.5v13c0 .276.22.5.5.5h13c.28 0 .5-.224.5-.5v-13c0-.276-.22-.5-.5-.5h-13zM18 10.711V9.25h-3.74v5.5h1.44v-1.719h1.7V11.57h-1.7v-.859H18zM11.79 9.25h1.44v5.5h-1.44v-5.5zm-3.07 1.375c.34 0 .77.172 1.02.43l1.03-.86c-.51-.601-1.28-.945-2.05-.945C7.19 9.25 6 10.453 6 12s1.19 2.75 2.72 2.75c.85 0 1.54-.344 2.05-.945v-2.149H8.38v1.032H9.4v.515c-.17.086-.42.172-.68.172-.76 0-1.36-.602-1.36-1.375 0-.688.6-1.375 1.36-1.375z">
                  </path>
                </g>
              </svg>
            </div>
            <span class="sr-only">Add Gif (Not implemented)</span>
          </button>
          <div
            class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-2 bg-gray-700 text-white text-xs rounded-md whitespace-nowrap opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
            Add Gif (Not implemented)
            <div
              class="absolute top-full left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-gray-700">
            </div>
          </div>
