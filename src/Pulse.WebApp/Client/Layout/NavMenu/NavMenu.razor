@code {

    private List<NavItem> _items = new()
    {
        new NavItem { Href = "/home", Text = "Home", Icon = "<HiOutlineHome class=\"w-6 h-6\" />" },
        new NavItem { Href = "/explore", Text = "Explore", Icon = "<HiHashtag class=\"w-6 h-6\" />" },
        new NavItem { Href = "/notifications", Text = "Notifications", Icon = "<HiOutlineBell class=\"w-6 h-6\" />" },
        new NavItem { Href = "/messages", Text = "Messages", Icon = "<HiOutlineEnvelope class=\"w-6 h-6\" />" },
        new NavItem { Href = "/bookmarks", Text = "Bookmarks", Icon = "<HiOutlineBookmark class=\"w-6 h-6\" />" },
        new NavItem { Href = "/profile", Text = "Profile", Icon = "<HiOutlineUser class=\"w-6 h-6\" />" },
    };

    private class NavItem
    {
        public required string Href { get; set; }
        public required string Text { get; set; }
        public required string Icon { get; set; }

        public void Deconstruct(out string href, out string text, out string icon)
        {
            href = Href;
            text = Text;
            icon = Icon;
        }
    }
}

<header class="hidden sm:flex w-24 xl:col-span-2">
    <div class="flex flex-1 xl:w-60 flex-col fixed h-full">
        <div class="flex flex-col flex-1">
            <NavItem href="/home" size="default">
                @* <SiTwitter class="w-6 h-6" /> *@
                Home
            </NavItem>
            @foreach (var (href, text, icon) in _items.Select((item, i) => (item.Href, item.Text, new MarkupString(item.Icon))))
            {
                <div class="rounded-lg focus:outline-none overflow-hidden">
                    <NavItem href=@href size="default">
                        @icon
                        <div class="hidden xl:inline-flex flex-none text-lg font-medium">
                            @text
                        </div>
                    </NavItem>
                </div>
            }
            @* <PopoverDemo />
            <DialogDemo /> *@
        </div>
        <div>
            @* <AccountNavItem /> *@
        </div>
    </div>
</header>
