@code {
    [Parameter] public required string Src { get; set; }
    [Parameter] public required string Alt { get; set; }
    [Parameter] public required string Initials { get; set; }

    private bool validImage => !string.IsNullOrEmpty(Src);
    private string imageFailedInitial => !validImage ? "true" : "false";
}

<div
    class="AvatarRoot inline-flex items-center justify-center overflow-hidden w-12 h-12 rounded-full bg-slate-900"
    x-data="{ imageFailed: @imageFailedInitial }">
    @if(validImage)
    {
        <img class="AvatarImage w-100 h-100 object-cover" src="@Src" alt="@Alt" 
            x-on:error="imageFailed = true"
            x-show="!imageFailed" />
    }
    <div class="AvatarFallback w-100 h-100 flex items-center justify-center text-base text-white leading-none font-semibold"
         x-show="imageFailed">
        @Initials
    </div>
</div>